@page "{id:int}"
@model SistemaEstudiantes.Web.Pages.Inscripciones.InscribirModel
@{
    ViewData["Title"] = "Inscribir Materias";
}

<h1>Inscribir Materias para: @Model.Estudiante.Nombre</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <h4>Materias Ya Inscritas</h4>
        @if (Model.Estudiante.MateriasInscritas.Any())
        {
            <ul class="list-group">
                @foreach (var materia in Model.Estudiante.MateriasInscritas)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @materia.Nombre (@materia.Creditos créditos)

                        <form method="post" asp-page-handler="RemoverMateria" asp-route-id="@Model.Estudiante.Id" asp-route-materiaId="@materia.Id">
                            <button type="submit" class="btn btn-danger btn-sm">X</button>
                        </form>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>El estudiante no tiene materias inscritas.</p>
        }
    </div>
    <div class="col-md-6">
        <h4>Materias Disponibles</h4>
        <form method="post">
            @* Mostramos el mensaje de error de la validación si existe *@
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            @foreach (var materia in Model.MateriasDisponibles)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="MateriasSeleccionadas" value="@materia.Id"
                           @(Model.Estudiante.MateriasInscritas.Any(m => m.Id == materia.Id) ? "checked" : "") />
                    <label class="form-check-label">
                        @materia.Nombre (@materia.Creditos créditos)
                    </label>
                </div>
            }
            <div class="form-group mt-3">
                <input type="submit" value="Guardar Inscripciones" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver</a>
</div>