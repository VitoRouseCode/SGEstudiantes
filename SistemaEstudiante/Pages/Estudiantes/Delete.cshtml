@page "{id:int}"
@model SistemaEstudiantes.Web.Pages.Estudiantes.DeleteModel
@{
    ViewData["Title"] = "Eliminar Estudiante";
}

<h1>@ViewData["Title"]</h1>

<h3>¿Estás seguro de que quieres eliminar a este estudiante?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estudiante.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estudiante.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estudiante.Documento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estudiante.Documento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Estudiante.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Estudiante.Correo)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Estudiante.Id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-page="./Index">Volver a la Lista</a>
    </form>
</div>